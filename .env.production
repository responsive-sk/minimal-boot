# Production Environment Configuration for Minimal Boot
# Copy this file to .env in your production build and update values
# IMPORTANT: Never commit .env to version control!

# Application Environment
APP_ENV=production
DEBUG=false

# Application URLs - UPDATE THESE WITH YOUR DOMAIN
APP_URL=https://yourdomain.com
ASSET_URL=https://yourdomain.com

# Database Configuration
# Update these with your production database settings
DB_HOST=localhost
DB_NAME=your_production_database
DB_USER=your_database_user
DB_PASS=your_database_password
DB_PORT=3306
DB_CHARSET=utf8mb4

# Security Settings
# Enable secure cookies for HTTPS
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# Session Configuration
SESSION_NAME=minimal_boot_session
SESSION_LIFETIME=3600

# CSRF Protection
CSRF_TOKEN_NAME=csrf_token
CSRF_HEADER_NAME=X-CSRF-Token

# Performance Settings
# Enable OPcache for better performance
OPCACHE_ENABLE=true
CACHE_ENABLE=true

# Logging
# Set to 'error' for production to reduce log size
LOG_LEVEL=error
LOG_PATH=var/log

# Cache and Session Directories
CACHE_PATH=var/cache
SESSION_PATH=var/sessions
TMP_PATH=var/tmp

# Database Path (for SQLite)
DATABASE_PATH=data/database.db

# File Upload Settings
UPLOAD_MAX_SIZE=10M
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=var/uploads

# Email Configuration (if using email features)
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Your Application Name"

# Application URLs
# Update with your production domain
APP_URL=https://yourdomain.com
ASSET_URL=https://yourdomain.com

# Third-party Services (if applicable)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# CDN Configuration (if using CDN)
# CDN_URL=https://cdn.yourdomain.com
# CDN_ENABLED=true

# Maintenance Mode
# Set to true to enable maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We are currently performing scheduled maintenance. Please check back soon."

# Rate Limiting (requests per minute)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# Backup Settings (if using automated backups)
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE="0 2 * * *"
# BACKUP_RETENTION_DAYS=30

# Monitoring (if using monitoring services)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Feature Flags
FEATURE_CONTACT_FORM=true
FEATURE_USER_REGISTRATION=true
FEATURE_THEME_SWITCHING=true
FEATURE_ANALYTICS=true
